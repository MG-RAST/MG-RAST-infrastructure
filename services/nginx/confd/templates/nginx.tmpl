# expected to be in /etc/confd/templates/nginx.tmpl


upstream mg-rast-v4-web_pool {
{{ range gets "/services/mg-rast-v4-web/*"}}
	#
	#instance: {{.Key}}
	{{$data := json .Value}}
	#id: {{$data.host}}
	#ip: {{$data.COREOS_PRIVATE_IPV4}}
	server {{$data.COREOS_PRIVATE_IPV4}}:{{$data.port}};
{{end}}
}

server {
    listen 80 ;
    listen [::]:80;
    
    server_name metagenomics.anl.gov ;

    #access_log /var/log/nginx/access.log upstreamlog;
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    location / {
        proxy_pass        http://mg-rast-v4-web_pool;
        proxy_redirect    off;
        proxy_set_header  Host             $host;
        proxy_set_header  X-Real-IP        $remote_addr;
        proxy_set_header  X-Forwarded-For  $proxy_add_x_forwarded_for;
   }
}
